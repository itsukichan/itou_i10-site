---
import { Image } from "astro:assets";

import gallery01 from "@/assets/img-item-01.jpg";
import gallery02 from "@/assets/img-item-02.jpg";
import gallery03 from "@/assets/img-item-03.jpg";
import gallery04 from "@/assets/img-item-04.jpg";
---

<section class="gallery-child-section">
  <h3 class="heading-lv3 animate__animated animate__fadeInUp">
    Recent gallery
  </h3>
  <div class="gallery-recent-gallery">
    <div
      class="gallery-recent-gallery-item animate__animated animate__fadeInUp"
    >
      <Image
        class="gallery-recent-gallery-item-img js-parallax-recent-gallery"
        src={gallery01}
        width={1600}
        height={900}
        alt=""
      />
    </div>
    <div
      class="gallery-recent-gallery-item animate__animated animate__fadeInUp"
    >
      <Image
        class="gallery-recent-gallery-item-img js-parallax-recent-gallery"
        src={gallery02}
        width={1600}
        height={900}
        alt=""
      />
    </div>
    <div
      class="gallery-recent-gallery-item animate__animated animate__fadeInUp"
    >
      <Image
        class="gallery-recent-gallery-item-img js-parallax-recent-gallery"
        src={gallery03}
        width={1600}
        height={900}
        alt=""
      />
    </div>
    <div
      class="gallery-recent-gallery-item animate__animated animate__fadeInUp"
    >
      <Image
        class="gallery-recent-gallery-item-img js-parallax-recent-gallery"
        src={gallery04}
        width={1600}
        height={900}
        alt=""
      />
    </div>
  </div>
  <div class="gallery-recent-text-wrapper animate__animated animate__fadeInUp">
    <h4 class="heading-lv4">Title</h4>
    <p class="base-text">
