    </p>
  </div>
</section>

<style>
  .gallery-recent-gallery {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1em;

    .gallery-recent-gallery-item-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
      aspect-ratio: 16 / 12;
    }
  }

  .gallery-recent-text-wrapper {
    margin-top: 1em;

    .heading-lv4 {
      margin-bottom: 0.5em;
    }
  }
</style>

<script>
  // simple parallaxの設定を修正
  import SimpleParallax from "simple-parallax-js/vanilla";

  const recentGalleryImages = document.querySelectorAll(
    ".js-parallax-recent-gallery",
  );
  new SimpleParallax(recentGalleryImages, {
    delay: 1,
    scale: 1.5,
    transition: "cubic-bezier(0,0,0,1)",
  });
</script>
